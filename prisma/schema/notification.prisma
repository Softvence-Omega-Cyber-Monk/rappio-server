model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String // e.g., 'CHANNEL_LIVE', 'NEW_VIDEO', 'ANNOUNCEMENT'
  message   String // The text displayed to the user
  contentId String? // Optional: link back to the content
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, isRead]) // For fast retrieval of unread notifications
  @@map("notifications")
}
