model UserNotificationPreference {
  id               Int     @id @default(autoincrement())
  userId           String  @unique
  user             User    @relation(fields: [userId], references: [id])
  channelLive      Boolean @default(true) // Maps to 'Channel goes live'
  newVideoUpload   Boolean @default(true) // Maps to 'New video upload'
  platformAnnounce Boolean @default(true) // 'Platform announcements'

  @@map("user_notification_preferences")
}
